---

import IndexLayout from "../layouts/index.layout.astro"

import Header from "../isles/header.astro";
import MainApp from "../components/MainApp.svelte";
import FooterStepsLayout from "../components/footer/FooterStepsLayout.svelte";
import BackStep from "../components/footer/footerStepsButtons/BackStep.svelte";
import NextStep from "../components/footer/footerStepsButtons/NextStep.svelte";

---

<IndexLayout>


	<Header />

	<MainApp client:load/>

	<FooterStepsLayout client:load>
		<BackStep slot="button_back" client:load/>
		<NextStep slot="button_next" client:load/>
	</FooterStepsLayout>

	
</IndexLayout>
