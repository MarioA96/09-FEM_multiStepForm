---

import { css, cx } from "../../styled-system/css"
import { grid, gridItem } from "../../styled-system/patterns";

import IndexLayout from "../layouts/index.layout.astro"

import Header from "../isles/header.astro";

import MainApp from "../components/MainApp.svelte";

---

<IndexLayout>


	<Header />

	<MainApp client:load/>

	<div id="steps_box" 
		class={
			css({
				display: 'flex',
				position: 'absolute',
				zIndex: 2,
                height: 'fit-content',
                width: '100%',
				marginTop: 'auto',
                marginBottom: '1rem',
                backgroundColor: 'white',
				bottom: '0px'
			})
		}
	>
		<div class={cx( grid({ columns: 12 }), css({ display: 'flex', alignItems: 'center', width: '100%', height: '65px' }) )}>
			<div class={ cx( gridItem({ colStart: 8, colEnd: 12 }), css({}) ) }>
				<button 
					class={ 
						css({ 
							width: '100%', 
							height: 'fit-content', 
							padding: '15px 10px', 
							bg: 'hsl(213, 96%, 18%)', 
							color: 'white', 
							fontSize: '13px', 
							fontWeight: '600', 
							borderRadius: '5px', 
							cursor: 'pointer',
							'_hover': {
								backgroundColor: 'gray.500'
							}
						}) 
					}
				>
					Next Step
				</button>
			</div>
		</div>
	</div>
	
</IndexLayout>
